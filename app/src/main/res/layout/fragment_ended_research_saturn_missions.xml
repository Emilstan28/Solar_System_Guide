<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SaturnResearchMissions">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pioneer11Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pioneer_11"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pioneer11Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pioneer_11_text"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark" />

        <TextView
            android:id="@+id/voyager1Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/voyager_1"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/voyager1Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/voyager_1_text"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark" />

        <TextView
            android:id="@+id/voyager2Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/voyager_2"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/voyager2Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/voyager_2_text"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark" />

        <TextView
            android:id="@+id/cassiniHuygensTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cassiniHuygens"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cassiniHuygensText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cassiniHuygens_Text"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark" />

    </LinearLayout>


</androidx.core.widget.NestedScrollView>