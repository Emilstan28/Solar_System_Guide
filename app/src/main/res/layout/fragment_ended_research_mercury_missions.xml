<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EndedResearchMercuryMissions">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mariner10Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mariner_10_title"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mariner10Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mariner_10_text"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/mariner_10_image_1_small" />

        <TextView
            android:id="@+id/messengerTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/messenger_title"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/messengerText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/messenger_text"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>