<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OngoingResearchJupiterMissions">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/junoTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/juno"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/junoText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/juno_text"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark" />

        <ImageView
            android:id="@+id/junoImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/juno_image_small" />

    </LinearLayout>


</androidx.core.widget.NestedScrollView>