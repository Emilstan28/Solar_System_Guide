<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SunDetails">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="157dp"
        tools:layout_editor_absoluteY="251dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/sizesAndDistancesSectionTitleVenusDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:editable="false"
                android:ems="10"
                android:inputType="none"
                android:text="@string/sizes_and_distances"
                android:textAlignment="center"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/venusSizesAndDistancesText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:text="@string/venus_sizes_and_distances_text"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/orbitAndRotationSectionTitleVenusDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:editable="false"
                android:ems="10"
                android:inputType="none"
                android:text="@string/orbit_and_rotation"
                android:textAlignment="center"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/venusOrbitAndRotationText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:text="@string/orbit_and_rotation_venus_text"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/historyOfTheVenusSectionTitleSunDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:editable="false"
                android:ems="10"
                android:inputType="none"
                android:text="@string/history_of_the_body"
                android:textAlignment="center"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/venusHistoryOfTheBodyText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:text="@string/history_of_venus_text"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/internalStructureSectionTitleVenusDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:editable="false"
                android:ems="10"
                android:inputType="none"
                android:text="@string/internal_structure"
                android:textAlignment="center"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/internalStructureOfTheVenusText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:text="@string/internal_structure_of_venus"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/atmosphereOfTheSunSectionTitleVenusDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:editable="false"
                android:ems="10"
                android:inputType="none"
                android:text="@string/atmosphere"
                android:textAlignment="center"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/atmosphereOfVenusText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:text="@string/atmosphere_of_venus"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>